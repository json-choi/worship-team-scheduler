{
  "name": "worship-team-scheduler",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "dev:mobile": "turbo dev --filter=@wts/mobile",
    "dev:api": "turbo dev --filter=@wts/api",
    "db:generate": "turbo db:generate --filter=@wts/db",
    "db:migrate": "turbo db:migrate --filter=@wts/db"
  },
  "devDependencies": {
    "turbo": "^2.4.0",
    "typescript": "^5.7.0"
  },
  "packageManager": "bun@1.2.0"
}
